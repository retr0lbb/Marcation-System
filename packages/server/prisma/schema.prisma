generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Marcation {
  id                 String    @id @unique @default(uuid())
  marcationDate      DateTime  @map("marcation_date")
  expectMarcationEnd DateTime  @map("expect_marcation_end")
  medicName          String
  Costumer           Costumer? @relation(fields: [costumerId], references: [id], onDelete: Cascade)
  costumerId         String?
}

model Costumer {
  id           String      @id @unique @default(uuid())
  name         String
  email        String      @unique
  contatcPhone String      @map("contact_phone")
  motivation   String
  Marcation    Marcation[]
}
