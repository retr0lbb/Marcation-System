generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model MedicRoles {
  id    Int     @id @unique @default(autoincrement())
  name  String  @unique
  Medic Medic[]

  @@map("medic_roles")
}

model Medic {
  id              String  @id @unique @default(uuid())
  name            String
  especialization String?

  Marcation    Marcation[]
  MedicRoles   MedicRoles? @relation(fields: [medicRolesId], references: [id])
  medicRolesId Int?
}

model Patient {
  id           String @id @unique @default(uuid())
  name         String
  email        String @unique
  contatcPhone String @map("contact_phone")
  motivation   String

  Marcation Marcation[]
}

model Marcation {
  id                 String   @id @unique @default(uuid())
  marcationDate      DateTime @map("marcation_date")
  expectMarcationEnd DateTime @map("expect_marcation_end")

  Medic   Medic?  @relation(fields: [medicId], references: [id])
  medicId String?

  Patient   Patient? @relation(fields: [patientId], references: [id], onDelete: Cascade)
  patientId String?
}
