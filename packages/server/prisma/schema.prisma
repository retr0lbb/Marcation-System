generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Marcation {
  id                String   @id @unique @default(uuid())
  clientName        String   @map("client_name")
  MarcationDate     DateTime @map("marcation_date")
  MarcationDuration DateTime @map("duration")
}
